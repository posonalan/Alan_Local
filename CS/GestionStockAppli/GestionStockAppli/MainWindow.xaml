            <Button  x:Name="BoutonFenetreAjout" Content="Ajouter" Grid.Column="0"  Click="BoutonFenetre_Click"/>
            <Button x:Name="Modifier" Content="Modifier" Grid.Column="2"  Click="BoutonFenetre_Click"/>
            <Button x:Name="Supprimer" Content="Supprimer" Grid.Column="4"  Click="BoutonFenetre_Click"/>
        -->
        <!--<Label Content="Retour" Grid.Column="4" Grid.Row="0" />-->
        <!--
            <Label x:Name="BoutonRetour" Grid.Column="2" Grid.Row="1"/>-->
        <!--

        </Grid>-->

    </Grid>



</Window>
